.side-bar

  .side-bar__left-header
    .side-bar__left-header__list
      .side-bar__left-header__list__user-name
        = current_user.name
      .side-bar__left-header__list__icon
        .edit_icon
          = link_to new_group_path, class: "edit_icon" do
            = icon('far', 'edit')
        .gear_icon
          = link_to edit_user_path(current_user),class: "gear_icon" do
            = icon('fas', 'cog')

  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__box
        = link_to '#' do
          .side-bar__group-list__name
            = group.name
          .side-bar__group-list__message
            まだコメントはありません