.main-chat__message-list__box
  .main-chat__message-list__box__infomation
    .main-chat__message-list__box__infomation__name
      = message.user.name
    .main-chat__message-list__box__infomation__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__message-list__box__comment
    - if message.content.present?
      .main-chat__message-list__box__comment__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?